<Window x:Class="AccountStorage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:ic="http://schemas.fontawesome.com/icons/"
        xmlns:local="clr-namespace:AccountStorage"
        xmlns:vm="clr-namespace:AccountStorage.ViewModels"
        Height="450" Width="800" Title="Keys Keeper" WindowStyle="None"
        Background="White" BorderThickness="1" BorderBrush="Black"
        WindowState="Maximized">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Style TargetType="ic:FontAwesome">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Background" Value="{Binding Background, RelativeSource={RelativeSource AncestorType=ButtonBase}}"/>
        </Style>

        <Style TargetType="ButtonBase" x:Key="EmptyButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ButtonBase">
                        <Border SnapsToDevicePixels="true" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" RecognizesAccessKey="True"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ToggleButton" x:Key="EmptyToggleButton" BasedOn="{StaticResource EmptyButton}">
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="False">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0 0 0 3" WindowChrome.IsHitTestVisibleInChrome="True">
            <Grid>
                <Button Style="{StaticResource EmptyButton}" HorizontalAlignment="Left" ToolTip="Настройки"
                        Click="SettersOpenCloseButton">
                    <ic:FontAwesome Icon="Solid_Cogs"/>
                </Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource EmptyButton}" ToolTip="Свернуть" Click="MinimizeButton_Click">
                        <ic:FontAwesome Icon="Regular_WindowMinimize"/>
                    </Button>
                    <Button Style="{StaticResource EmptyButton}" ToolTip="Уменьшить окно" Click="ChangeWindowStateButton_Click">
                        <ic:FontAwesome Icon="Regular_WindowRestore"/>
                    </Button>
                    <Button Style="{StaticResource EmptyButton}" ToolTip="Закрыть" Click="CloseButton_Click">
                        <ic:FontAwesome Icon="Regular_WindowClose"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="2" BorderThickness="0 1 0 0" BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <ToggleButton Style="{StaticResource EmptyToggleButton}" ToolTip="Список аккаунтов" Click="AccountListOpenCloseButton">
                        <ic:FontAwesome Icon="Regular_ListAlt"/>
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource EmptyToggleButton}" ToolTip="Корзина" Click="BasketOpenCloseButton">
                        <ic:FontAwesome Icon="Regular_TrashAlt"/>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <ToggleButton Style="{StaticResource EmptyToggleButton}" ToolTip="Генератор пароля" Click="PasswordGeneratorOpenCloseButton">
                        <ic:FontAwesome Icon="Solid_Dice"/>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
